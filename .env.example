# Пример файла с переменными окружения
# Скопируйте этот файл в .env и заполните своими данными

# Порт приложения
PORT=5173

# Режим работы (production или development)
NODE_ENV=production

# JWT секретный ключ (используется в server/auth.js)
# Сгенерируйте свой уникальный ключ!
JWT_SECRET=your-super-secret-jwt-key-change-this

# ============================================
# БАЗА ДАННЫХ - ДВОЙНАЯ КОНФИГУРАЦИЯ
# ============================================

# PostgreSQL (Render - облачная БД)
# Пример: postgresql://user:password@host:5432/database
DATABASE_URL=postgresql://user:password@dpg-xxxxx.oregon-postgres.render.com/dbname

# MySQL (XAMPP - локальная БД)
XAMPP_ENABLED=true
XAMPP_HOST=localhost
XAMPP_USER=root
XAMPP_PASSWORD=
XAMPP_DB_NAME=nelondlc
XAMPP_PORT=3306

# Основная база данных (postgres или mysql)
# Все запросы будут идти в основную БД
PRIMARY_DB=mysql

# Синхронизация между базами (true/false)
# Если true, данные будут автоматически копироваться во вторую БД
SYNC_DATABASES=true

# ============================================
# KEEP-ALIVE БОТ
# ============================================

# URL вашего сервера для пинга (замените на свой)
SERVER_URL=http://localhost:5173

# Интервал пинга в миллисекундах (14 минут = 840000)
PING_INTERVAL=840000

# Health endpoint для проверки (опционально)
HEALTH_ENDPOINT=/api/health
