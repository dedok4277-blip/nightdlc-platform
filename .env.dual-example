# ============================================
# ПРИМЕР КОНФИГУРАЦИИ ДЛЯ ДВУХ БАЗ ДАННЫХ
# ============================================
# Скопируйте этот файл в .env и настройте под себя

# Порт приложения
PORT=5173

# Режим работы
NODE_ENV=production

# JWT секретный ключ
JWT_SECRET=your-super-secret-jwt-key-change-this-12345

# ============================================
# POSTGRESQL (RENDER - ОБЛАЧНАЯ БД)
# ============================================
# Получите URL в Render Dashboard → PostgreSQL → Connection String
# Пример: postgresql://user:password@dpg-xxxxx.oregon-postgres.render.com/dbname
DATABASE_URL=postgresql://nelondlc_user:your_password@dpg-xxxxx.oregon-postgres.render.com/nelondlc_db

# ============================================
# MYSQL (XAMPP - ЛОКАЛЬНАЯ БД)
# ============================================
# Включить MySQL через XAMPP?
XAMPP_ENABLED=true

# Настройки подключения к XAMPP
XAMPP_HOST=localhost
XAMPP_USER=root
XAMPP_PASSWORD=
XAMPP_DB_NAME=nelondlc
XAMPP_PORT=3306

# ============================================
# НАСТРОЙКИ СИНХРОНИЗАЦИИ
# ============================================
# Какая база данных главная?
# postgres - все запросы идут в PostgreSQL (Render)
# mysql - все запросы идут в MySQL (XAMPP)
PRIMARY_DB=postgres

# Автоматически копировать данные во вторую БД?
# true - данные синхронизируются автоматически
# false - каждая БД работает независимо
SYNC_DATABASES=true

# ============================================
# РЕКОМЕНДУЕМЫЕ КОНФИГУРАЦИИ
# ============================================

# Продакшен (Render главная, XAMPP бэкап):
# PRIMARY_DB=postgres
# SYNC_DATABASES=true
# XAMPP_ENABLED=true

# Разработка (XAMPP главная, Render бэкап):
# PRIMARY_DB=mysql
# SYNC_DATABASES=true
# DATABASE_URL=postgresql://...

# Только облако (без XAMPP):
# PRIMARY_DB=postgres
# XAMPP_ENABLED=false
# SYNC_DATABASES=false

# Только локально (без Render):
# PRIMARY_DB=mysql
# DATABASE_URL=
# SYNC_DATABASES=false
